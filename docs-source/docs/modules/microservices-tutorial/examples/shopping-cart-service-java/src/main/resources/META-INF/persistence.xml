<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="shopping-cart-hibernate">
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/shopping-cart?reWriteBatchedInserts=true"/>
            <property name="javax.persistence.jdbc.user" value="shopping-cart"/>
            <property name="javax.persistence.jdbc.password" value="shopping-cart"/>
            <!-- field access, no setters -->
            <property name="hibernate.default-access" value="field"/>
            <!-- avoid lazy loading -->
            <property name="hibernate.default-lazy" value="false"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>
